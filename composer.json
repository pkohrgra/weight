{
    "name": "spatie/weight",
    "description": "Whigth",
    "keywords": [
        "spatie",
        "weight"
    ],
    "homepage": "https://github.com/spatie/weight",
    "license": "MIT",
    "authors": [
        {
            "name": "Peter Kohrgruber",
            "email": "p.kohrgruber@co-x.at",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpunit/phpunit": "^9.5",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Spatie\\Weight\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\Weight\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
